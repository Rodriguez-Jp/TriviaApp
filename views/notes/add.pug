extends ../layout/index

block content   
    div(class="w-full flex flex-col justify-center items-center h-full mt-10")
        div(class="w-3/4", id="form-container")
            form(class="w-1/2 m-auto flex flex-col justify-center items-center", action="/mynotes/add", method="post") 
                div(class="p-4 w-3/4", id="title")
                    label(class="text-2xl mb-1 block") Title
                    input(class="border-2 w-full p-2", type="text", name="title", placeholder="Note title")
                div(class="p-4 w-3/4", id="note", placeholder="Write your note!")
                    label(class="text-2xl mb-1 block") Note
                    textarea(class="border-2 w-full resize-none h-40", name="note", placeholder="Write your note!")
                div(class="w-3/4 p-5", id="send-btn")
                    input(class="w-full p-2 bg-green-500 rounded-lg text-white font-bold cursor-pointer hover:bg-green-600 transition duration-200", type="submit", value="Save")