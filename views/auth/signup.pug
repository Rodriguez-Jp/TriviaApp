extends ../layout/index

block content 
    div(class="w-full flex flex-col justify-center items-center h-full mt-10")
        div(class="w-3/4", id="form-container")
            form(class="w-1/2 m-auto flex flex-col justify-center items-center", action="/signup", method="POST") 
                div(class="p-4 w-3/4", id="fullname-div")
                    label(class="text-2xl mb-1 block") Enter your full name
                    input(class="border-2 w-full p-2", type="text", name="fullname", placeholder="Full name")
                div(class="p-4 w-3/4", id="username-div")
                    label(class="text-2xl mb-1 block") Create a Username
                    input(class="border-2 w-full p-2", type="text", name="username", placeholder="Username")
                div(class="p-4 w-3/4", id="password-div")
                    label(class="text-2xl mb-1 block") Create a password
                    input(class="border-2 w-full p-2", type="password", name="password", placeholder="Password")
                div(class="w-3/4 p-5", id="send-btn")
                    input(class="w-full p-2 bg-green-500 rounded-lg text-white font-bold cursor-pointer hover:bg-green-600 transition duration-200", type="submit", value="Signup")